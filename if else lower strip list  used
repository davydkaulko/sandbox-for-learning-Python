
text = input("What is the Answer to the Great Question of Life, the Universe, and Everything? ")

def clean_text(text):
    cleaned = text.strip()
    cleaned = cleaned.lower()
    return cleaned

result_text = clean_text(text)

answers = ["42", "forty two", "forty-two"]

if result_text in answers:
    print("true")
else:
    print("false")


text = input("What's your animal?")
def clean_text(text):
    cleaned = text.strip()
    cleaned = cleaned.lower()
    return cleaned
cleartext = clean_text(text)

answers = ["cat","parrot", "dog"]
if cleartext in answers:
      print("OK")
else:
      print("not OK")


